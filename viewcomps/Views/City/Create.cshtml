@model City

<h1>Create</h1>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="form-control"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country" class="form-control"></label>
        <input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Population" class="form-control"></label>
        <input asp-for="Population" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" asp-controller="Home"  class="btn btn-secondary">Cancel</a>
</form>

